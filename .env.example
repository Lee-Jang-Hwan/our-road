# ============================================
# OurRoad 환경 변수 설정
# ============================================
# 이 파일을 복사하여 .env 파일을 생성하세요
# cp .env.example .env
# ============================================

# ============================================
# Clerk Authentication
# https://dashboard.clerk.dev
# ============================================
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY="pk_test_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
CLERK_SECRET_KEY="sk_test_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
NEXT_PUBLIC_CLERK_SIGN_IN_URL="/sign-in"
NEXT_PUBLIC_CLERK_SIGN_IN_FALLBACK_REDIRECT_URL="/"
NEXT_PUBLIC_CLERK_SIGN_UP_FALLBACK_REDIRECT_URL="/"

# ============================================
# Supabase
# https://supabase.com/dashboard
# ============================================
NEXT_PUBLIC_SUPABASE_URL="https://your-project.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-service-role-key"
SUPABASE_PROJECT_ID="your-project-id"
NEXT_PUBLIC_STORAGE_BUCKET="uploads"

# ============================================
# Kakao API
# https://developers.kakao.com
# ============================================
# 1. Kakao Developers 접속 > 내 애플리케이션 > 앱 생성
# 2. 앱 키 > JavaScript 키 복사 (지도용)
# 3. 앱 키 > REST API 키 복사 (검색용)
# 4. 플랫폼 > Web 사이트 도메인 등록 (http://localhost:3000)

# Kakao Maps JavaScript API 키 (지도 표시용)
# 사용처: 클라이언트에서 지도 렌더링
NEXT_PUBLIC_KAKAO_MAP_KEY="your-kakao-javascript-key"

# Kakao Local REST API 키 (장소 검색용)
# 사용처: 서버에서 키워드/카테고리 검색, 좌표 변환
KAKAO_REST_API_KEY="your-kakao-rest-api-key"

# ============================================
# Kakao Mobility API
# https://developers.kakaomobility.com
# ============================================
# 1. Kakao Mobility 개발자센터 접속
# 2. 애플리케이션 생성
# 3. 자동차 길찾기 API 사용 신청
# 4. APP KEY 복사

# Kakao Mobility API 키 (자동차 경로용)
# 사용처: 자동차 경로 조회, 다중 경유지 길찾기
# 제한: 일 10,000건, 최대 30개 경유지
KAKAO_MOBILITY_KEY="your-kakao-mobility-key"

# ============================================
# ODsay API
# https://lab.odsay.com
# ============================================
# 1. ODsay LAB 회원가입
# 2. 애플리케이션 등록
# 3. API 키 발급
# 4. 사용량 확인: 기본 일 1,000건 (유료 플랜 업그레이드 가능)

# ODsay 대중교통 API 키
# 사용처: 대중교통 경로 조회, 환승 정보, 요금 계산
# 제한: 일 1,000건 (기본), 유료 플랜 시 증가
ODSAY_API_KEY="your-odsay-api-key"

# ============================================
# Optional: Analytics & Monitoring
# ============================================
# NEXT_PUBLIC_GA_ID="G-XXXXXXXXXX"
# SENTRY_DSN="https://xxxxx@sentry.io/xxxxx"
